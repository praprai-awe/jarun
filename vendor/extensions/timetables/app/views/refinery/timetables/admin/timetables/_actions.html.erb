<ul>
  <% if ::Refinery::Timetables::Admin::TimetablesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.timetables_admin_timetables_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_timetables_admin_timetable_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Timetables::Admin::TimetablesController.sortable? && ::Refinery::Timetables::Timetable.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Timetables"),
                 refinery.timetables_admin_timetables_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Timetables"),
                 refinery.timetables_admin_timetables_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
