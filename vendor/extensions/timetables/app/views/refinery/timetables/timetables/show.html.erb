<% content_for :body_content_title do %>
  <%= @timetable.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @timetable.name %>
    </p>
  </section>
  <section>
    <h1>Datetime</h1>
    <p>
      <%=raw @timetable.datetime %>
    </p>
  </section>
  <section>
    <h1>Upright</h1>
    <p>
      <%=raw @timetable.upright %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @timetable.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @timetable.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="timetables">
      <% @timetables.each do |timetable| %>
        <li>
          <%= link_to timetable.name, refinery.timetables_timetable_path(timetable) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>





