<ul>
  <% if ::Refinery::Plans::Admin::PlansController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.plans_admin_plans_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_plans_admin_plan_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Plans::Admin::PlansController.sortable? && ::Refinery::Plans::Plan.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Plans"),
                 refinery.plans_admin_plans_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Plans"),
                 refinery.plans_admin_plans_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
